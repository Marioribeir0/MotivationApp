<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/Menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/purple"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />
    
    <ImageView
        android:id="@+id/Image_Infinite"
        android:src="@drawable/infinite"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/Menu"
        android:layout_alignBottom="@+id/Menu"
        android:layout_marginStart="32dp"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/Image_Emote"
        android:src="@drawable/emote"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/Menu"
        android:layout_alignBottom="@+id/Menu"
        android:layout_centerHorizontal="true"
         app:tint="@color/white" />

    <ImageView
        android:id="@+id/Image_Sunny"
        android:src="@drawable/sunny"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/Menu"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/Menu"
        android:layout_marginEnd="32dp"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/TextView_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Olá Kotlin"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Menu"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:id="@+id/TextView_Frase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riscos devem ser corridos, porque o maior perigo é não arriscarmos nada."
        android:gravity="center"
        android:textSize="15sp"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/View_Linha"
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:background="@color/purple"
        android:layout_below="@+id/TextView_Frase"
        android:layout_centerHorizontal="true"
        android:elevation="4dp"
        />
    
    <Button
        android:id="@+id/Button_NovaFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Nova Frase"
        android:backgroundTint="@color/purple"
        />
    
</RelativeLayout>